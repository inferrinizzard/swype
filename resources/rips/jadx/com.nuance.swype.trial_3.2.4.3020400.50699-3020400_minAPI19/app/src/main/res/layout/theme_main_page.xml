<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/theme_main_page_lineLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:id="@+id/no_data_progress_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:orientation="vertical"
                android:id="@+id/no_data_preview_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:indeterminateDrawable="@drawable/custom_progressbar_indeterminate"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/theme_category_list"
            android:paddingTop="6dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_weight="1"
            android:footerDividersEnabled="false"/>
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/theme_no_data_page"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/no_data_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminateDrawable="@drawable/custom_progressbar_indeterminate"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</FrameLayout>
