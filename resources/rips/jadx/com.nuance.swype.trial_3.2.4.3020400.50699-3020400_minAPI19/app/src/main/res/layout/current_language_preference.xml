<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:minHeight="?android:attr/listPreferredItemHeight">
    <LinearLayout
        android:layout_gravity="start|center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/language_item"
            android:paddingLeft="16dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            style="@style/SelectablePreference">
            <requestFocus/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="start"
                android:id="@android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="start"
                android:id="@android:id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@android:id/title"
                android:textDirection="locale"
                android:layout_alignStart="@android:id/title"/>
        </RelativeLayout>
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="start"
            android:id="@+id/language_preference_additional_name"
            android:paddingLeft="0dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:focusable="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textDirection="locale"
            style="@style/SelectablePreference"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@android:id/widget_frame"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/SelectablePreference">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/language_preference_keyboard"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/functionbar_inputmodes"
            android:contentDescription="@string/pref_menu_language_keyboardlayout"/>
    </LinearLayout>
</LinearLayout>
