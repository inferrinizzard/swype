<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/theme_main_page_lineLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/theme_bundle_page_header_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/settings_back"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_settings_back"
            android:layout_marginStart="15dp"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/bundle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/settings_back"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/settings_back"/>
        <Button
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/bundle_status_button"
            android:background="@drawable/settings_theme_button"
            android:paddingLeft="15dp"
            android:paddingTop="1dp"
            android:paddingRight="15dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/settings_back"
            android:textAlignment="center"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:id="@+id/bundle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:layout_below="@+id/settings_back"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/bundle_status_button"
            android:layout_alignStart="@+id/settings_back"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/theme_grid_view"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_weight="1"
        android:footerDividersEnabled="false"
        android:paddingStart="@dimen/preference_theme_preview_padding"
        android:paddingEnd="@dimen/preference_theme_preview_padding"/>
</LinearLayout>
