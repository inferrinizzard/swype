<?xml version="1.0" encoding="utf-8"?>
<com.nuance.swype.widget.directional.DirectionalRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/theme_primary"
            android:layout_gravity="center_horizontal"
            android:id="@+id/activation_code_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/pref_connect_activation_code"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/about_swype_links"
            android:layout_gravity="center_horizontal"
            android:id="@+id/activation_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/editText_activation_code"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:maxWidth="90dp"
            android:inputType="number"
            style="@style/activationEditText"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff0000"
            android:layout_gravity="center_horizontal"
            android:id="@+id/incorrect_code"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_connect_activation_code_incorrect"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?android:attr/listDivider"
            android:showDividers="middle">
            <Button
                android:id="@+id/change_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/change_email_button"
                android:layout_weight="1"
                android:contentDescription="@string/change_email_button"/>
            <Button
                android:id="@+id/resend_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/resend_code_button"
                android:layout_weight="1"
                android:contentDescription="@string/resend_code_button"/>
            <Button
                android:id="@+id/confirm_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/ok_button"
                android:layout_weight="1"
                android:contentDescription="@string/ok_button"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"/>
</com.nuance.swype.widget.directional.DirectionalRelativeLayout>
