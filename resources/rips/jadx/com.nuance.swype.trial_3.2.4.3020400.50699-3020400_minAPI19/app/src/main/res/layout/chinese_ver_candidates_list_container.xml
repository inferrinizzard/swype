<?xml version="1.0" encoding="utf-8"?>
<com.nuance.swype.input.chinese.VerCandidatesListContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:textSize="@dimen/key_text_size_small"
    android:textColor="?attr/defaultKeyTextColor"
    android:orientation="vertical"
    android:id="@+id/candidates_ver_list_view"
    android:background="?attr/keyboardSuggestStripVer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/candidate_top_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.nuance.swype.input.chinese.VerCandidatesListView
        android:id="@+id/vertical_spell_candidates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/candidate_bottom_parent"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.nuance.swype.input.chinese.VerCandidatesListContainer>
