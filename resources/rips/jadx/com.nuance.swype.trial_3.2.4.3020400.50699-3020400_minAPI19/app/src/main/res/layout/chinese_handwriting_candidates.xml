<?xml version="1.0" encoding="utf-8"?>
<com.nuance.swype.input.chinese.SpellPhraseHandWritingViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spell_phrase_hw_container"
    android:background="?attr/keyboardSuggestStripHandwriting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/candidate_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/spell_layout_window"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/spell_candidate_left_parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/spell_candidate_left"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:layout_width="@dimen/cjk_candidates_arrow_width"
                    android:layout_height="match_parent"
                    android:src="?attr/cjkSuggestStripArrowLeft"/>
            </LinearLayout>
            <com.nuance.swype.input.chinese.SpellListView
                android:id="@+id/spell_candidates"
                android:layout_width="0dp"
                android:layout_height="@dimen/candidates_list_height"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/spell_candidate_right_parent"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/spell_candidate_right"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:layout_width="@dimen/cjk_candidates_arrow_width"
                    android:layout_height="match_parent"
                    android:src="?attr/cjkSuggestStripArrowRight"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/candidates_list_height">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/phrase_layout_window"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/phrase_candidate_left_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/phrase_candidate_left"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:layout_width="@dimen/cjk_candidates_arrow_width"
                        android:layout_height="match_parent"
                        android:src="?attr/cjkSuggestStripArrowLeft"/>
                </LinearLayout>
                <com.nuance.swype.input.chinese.CJKCandidatesListView
                    android:id="@+id/cjk_candidates"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/phrase_candidate_right_parent"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/phrase_candidate_right"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:layout_width="@dimen/cjk_candidates_arrow_width"
                        android:layout_height="match_parent"
                        android:src="?attr/cjkSuggestStripArrowRight"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/functionbar_layout_window"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/candidates_list_height">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/functionbar_left_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <com.nuance.swype.input.FunctionBarListView
                    android:id="@+id/functionbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/functionbar_right_parent"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.nuance.swype.input.chinese.SpellPhraseHandWritingViewContainer>
