<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/settings_seekbar_text_size_scaled_pixels"
        android:gravity="center_horizontal"
        android:id="@+id/valueVibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ms"/>
    <SeekBar
        android:id="@+id/duration_seekbar"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="34dp"
        android:paddingEnd="34dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/settings_seekbar_boundary_text_size_scaled_pixels"
            android:gravity="start"
            android:id="@+id/valueTextMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignParentLeft="true"
            android:paddingStart="32dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/settings_seekbar_boundary_text_size_scaled_pixels"
            android:gravity="end"
            android:id="@+id/valueTextMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250ms"
            android:layout_alignParentRight="true"
            android:paddingEnd="14dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
