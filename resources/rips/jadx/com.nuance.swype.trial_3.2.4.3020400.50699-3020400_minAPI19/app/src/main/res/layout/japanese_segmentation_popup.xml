<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/segmentation_popup_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">
    <ImageButton
        android:id="@+id/closeArrow"
        android:background="@android:color/transparent"
        android:paddingTop="4dp"
        android:layout_width="@dimen/segmentation_close_button_width"
        android:layout_height="@dimen/segmentation_close_button_width"
        android:src="@drawable/keyboard_popup_btn_close_jp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingEnd="4dp"/>
    <ImageButton
        android:id="@+id/leftArrow"
        android:background="@drawable/btn_keyboard_action_key_jp"
        android:clickable="true"
        android:layout_width="@dimen/segmentation_arrow_width"
        android:layout_height="@dimen/segmentation_arrow_height"
        android:src="?attr/japaneseLeftPopup"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingStart="4dp"/>
    <ImageButton
        android:id="@+id/rightArrow"
        android:background="@drawable/btn_keyboard_action_key_jp"
        android:clickable="true"
        android:layout_width="@dimen/segmentation_arrow_width"
        android:layout_height="@dimen/segmentation_arrow_height"
        android:src="?attr/japaneseRightPopup"
        android:layout_alignTop="@+id/leftArrow"
        android:layout_alignParentRight="true"
        android:paddingStart="4dp"/>
</RelativeLayout>
