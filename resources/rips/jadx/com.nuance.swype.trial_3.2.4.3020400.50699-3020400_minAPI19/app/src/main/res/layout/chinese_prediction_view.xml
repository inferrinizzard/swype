<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/cloud_prediction_textview_height">
    <ImageView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/search_image"
        android:background="@android:color/transparent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chinese_prediction_icon"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"/>
    <com.nuance.swype.widget.CustomHorizontalScrollView
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:id="@+id/cloudPredictionscrollView"
        android:background="?attr/wclCjkChineseCloudBackgroundImage"
        android:fadingEdgeLength="50dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:requiresFadingEdge="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/cloud_prediction_text_size"
                android:textColor="?attr/wclCjkChineseCloudTextColor"
                android:id="@+id/search_result"
                android:background="@android:color/transparent"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
    </com.nuance.swype.widget.CustomHorizontalScrollView>
</RelativeLayout>
