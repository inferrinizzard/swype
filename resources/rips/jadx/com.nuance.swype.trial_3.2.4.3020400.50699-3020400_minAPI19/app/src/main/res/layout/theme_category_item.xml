<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/theme_category_item_lineLayout"
    android:paddingTop="8dp"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.nuance.swype.widget.directional.DirectionalRelativeLayout
        android:gravity="top"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:paddingTop="@dimen/preference_theme_preview_padding"
        android:paddingBottom="@dimen/preference_theme_preview_padding"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="true"
        android:paddingStart="12dp"
        android:paddingEnd="4dp">
        <com.nuance.swype.widget.directional.DirectionalTextView
            android:textSize="@dimen/theme_category_title_size"
            android:gravity="center"
            android:id="@+id/theme_category_title"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textDirection="locale"
            android:layout_alignParentStart="true"/>
        <Button
            android:textSize="13sp"
            android:id="@+id/theme_more_view_btn"
            android:background="@drawable/trans_key"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_key_height"
            android:text="@string/view_all_content"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"/>
    </com.nuance.swype.widget.directional.DirectionalRelativeLayout>
    <com.nuance.swype.input.settings.HorizontalListView
        android:layout_gravity="start"
        android:id="@+id/theme_horizontal_listview"
        android:paddingTop="4dp"
        android:fadingEdgeLength="0dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:requiresFadingEdge="horizontal"
        android:layoutDirection="ltr"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>
</LinearLayout>
