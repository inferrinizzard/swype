<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/settings_seekbar_text_size_scaled_pixels"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accessibility_notification_on_keyboard_portrait_short"/>
        <TextView
            android:textSize="@dimen/settings_seekbar_boundary_text_size_scaled_pixels"
            android:gravity="center_horizontal"
            android:id="@+id/valueTextPortrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100%"/>
        <SeekBar
            android:id="@+id/portrait_seekbar"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="34dp"
            android:paddingEnd="34dp"/>
        <TextView
            android:textSize="@dimen/settings_seekbar_text_size_scaled_pixels"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accessibility_notification_on_keyboard_landscape_short"/>
        <TextView
            android:textSize="@dimen/settings_seekbar_boundary_text_size_scaled_pixels"
            android:gravity="center_horizontal"
            android:id="@+id/valueTextLandscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100%"/>
        <SeekBar
            android:id="@+id/landscape_seekbar"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="34dp"
            android:paddingEnd="34dp"/>
    </LinearLayout>
</ScrollView>
