<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:height="5dp"
        android:top="5dp">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="@color/preference_bar_begin"
                android:endColor="@color/preference_bar_end"
                android:angle="270"
                android:centerY="0.75"
                android:centerColor="@color/preference_bar_middle"/>
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress"
        android:left="5dp"
        android:top="5dp"
        android:right="5dp">
        <bitmap
            android:src="@drawable/progressbar_indeterminate1"
            android:height="10dp"
            android:tileMode="repeat"/>
    </item>
</layer-list>
