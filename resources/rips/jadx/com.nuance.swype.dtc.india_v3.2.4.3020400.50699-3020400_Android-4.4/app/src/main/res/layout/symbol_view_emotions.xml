<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ns="http://schemas.android.com/apk/res-auto"
    android:id="@+id/symbol_view_emotions"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/symbol_scroll_view_emotions"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nuance.swype.input.chinese.ChineseKeyboardViewEx
            android:id="@+id/symbol_keyboardViewEx_emotions"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ns:keyBackground="@drawable/emoji_key_action"
            ns:isPopupKeyboard="true"
            ns:isEmojiStylePopupKeyboard="true"
            ns:keyBorder="?attr/emojiBorder"/>
    </ScrollView>
</FrameLayout>
