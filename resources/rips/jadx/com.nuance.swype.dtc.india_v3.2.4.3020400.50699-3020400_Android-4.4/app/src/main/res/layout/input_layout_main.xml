<?xml version="1.0" encoding="utf-8"?>
<com.nuance.swype.input.view.InputLayoutMain xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_area"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/content_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/candidateview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/inputview_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/coverview_container"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</com.nuance.swype.input.view.InputLayoutMain>
