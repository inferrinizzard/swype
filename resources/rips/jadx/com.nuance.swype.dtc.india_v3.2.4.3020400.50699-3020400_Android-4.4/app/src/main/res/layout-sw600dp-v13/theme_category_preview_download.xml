<?xml version="1.0" encoding="utf-8"?>
<com.nuance.swype.widget.directional.DirectionalRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/theme_padding_top"
    android:paddingEnd="@dimen/theme_padding_top">
    <RelativeLayout
        android:id="@+id/layout_download_preview_logo"
        android:background="@null"
        android:paddingTop="@dimen/theme_padding_top"
        android:layout_width="@dimen/category_theme_column_width"
        android:layout_height="@dimen/category_theme_column_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <com.nuance.swype.util.drawable.ImageViewWrapper
            android:id="@+id/download_preview_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <ProgressBar
            android:id="@+id/theme_category_no_data_view"
            android:visibility="gone"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:indeterminateDrawable="@drawable/custom_progressbar_indeterminate"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.nuance.swype.widget.directional.DirectionalTextView
        android:textSize="13sp"
        android:gravity="start"
        android:id="@+id/theme_name_category"
        android:paddingTop="3dp"
        android:layout_width="@dimen/category_theme_column_width"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_below="@+id/layout_download_preview_logo"
        android:fontFamily="sans-serif"
        android:textDirection="locale"
        android:paddingStart="2dp"/>
    <ImageView
        android:id="@+id/logo_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:scaleType="fitEnd"
        android:layout_below="@+id/theme_name_category"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/theme_lock_icon"
        android:layout_marginEnd="3dp"
        android:layout_alignParentEnd="true"/>
    <com.nuance.swype.widget.directional.DirectionalTextView
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:id="@+id/theme_price"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:lines="1"
        android:layout_below="@+id/theme_name_category"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:textDirection="locale"
        android:layout_marginEnd="3dp"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/progressbar_row"
        android:background="@null"
        android:paddingTop="@dimen/theme_padding_top"
        android:layout_width="@dimen/category_theme_column_width"
        android:layout_height="23dp"
        android:layout_below="@+id/theme_name_category"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/progressbar_theme_download"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:indeterminate="false"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            style="@style/CustomHorizontalProgressBar"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/cancel_theme_download"
            android:background="@android:color/transparent"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/settings_theme_stop"
            android:contentDescription="@string/cancel_button"/>
    </LinearLayout>
</com.nuance.swype.widget.directional.DirectionalRelativeLayout>
