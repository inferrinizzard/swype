<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_about"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/about_swype_links"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/version"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/xt9_version"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xt9_version_prefix"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Small"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/xt9_build_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/t9write_version"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t9write_version_prefix"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/website_link_header"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/about_swype_links"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/website_link"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:text="@string/url_swype_website"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/twitter_link_header"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/about_swype_links"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/twitter_link"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:text="@string/url_swype_twitter"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/facebook_link_header"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/about_swype_links"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/facebook_link"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:text="@string/url_swype_facebook"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/youtube_link_header"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/about_swype_links"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/youtube_link"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:text="@string/url_swype_youtube"/>
    </LinearLayout>
</ScrollView>
