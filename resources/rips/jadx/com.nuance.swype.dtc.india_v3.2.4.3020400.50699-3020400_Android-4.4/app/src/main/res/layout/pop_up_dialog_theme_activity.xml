<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/purchase_theme_name"
            android:paddingTop="11dp"
            android:paddingBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingStart="11dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#000000"
            android:id="@+id/purchase_theme_price"
            android:background="#ffffff"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAllCaps="true"/>
    </RelativeLayout>
    <com.nuance.swype.widget.directional.DirectionalRelativeLayout
        android:id="@+id/layout_download_preview_logo"
        android:background="@null"
        android:paddingTop="@dimen/theme_padding_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nuance.swype.util.drawable.ImageViewWrapper
            android:id="@+id/purchase_theme_preview_image"
            android:layout_width="@dimen/pop_up_theme_column_width"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"/>
    </com.nuance.swype.widget.directional.DirectionalRelativeLayout>
    <Button
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/preview_theme_close"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/startup_close"
        android:textAllCaps="true"/>
    <LinearLayout
        android:id="@+id/purchase_buttons_layout"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="true"
        style="?android:attr/buttonBarStyle">
        <Button
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#ffa200"
            android:id="@+id/purchase_theme_uninstall"
            android:background="#ffffff"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/uninstall_button"
            android:layout_weight="1"
            android:contentDescription="@string/uninstall_button"
            android:textAllCaps="true"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#ffa200"
            android:id="@+id/purchase_theme_cancel"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel_button"
            android:layout_weight="1"
            android:contentDescription="@string/cancel_button"
            android:textAllCaps="true"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#ffa200"
            android:id="@+id/purchase_theme_confirm"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/theme_buy_theme"
            android:layout_weight="1"
            android:contentDescription="@string/theme_buy_theme"
            android:textAllCaps="true"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
